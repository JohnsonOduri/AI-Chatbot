<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="667.0" prefWidth="602.0" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aichatbot.controllers.ChatController">

    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <!-- Chat display area -->
    <ListView fx:id="chatListView" prefHeight="616.0" prefWidth="582.0" />

    <!-- Input and Send button -->
    <HBox spacing="10">
        <TextField fx:id="userInput" promptText="Type your message here..." text="hey" HBox.hgrow="ALWAYS" />
        <Button onAction="#handleSend" text="Send" />
    </HBox>

</VBox>
